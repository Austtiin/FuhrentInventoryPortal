{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*", "/_next/*", "/logo/*", "*.html"]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/loggedout.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/loggedout",
      "serve": "/loggedout.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/401.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/403.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/404.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/_next/static/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/api/*",
      "allowedRoles": ["inventoryuser"]
    },
    {
      "route": "/*",
      "allowedRoles": ["inventoryuser"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "403": {
      "statusCode": 403,
      "rewrite": "/403.html"
    },
    "404": {
      "statusCode": 404,
      "rewrite": "/404.html"
    }
  },
  "globalHeaders": {
    "cache-control": "no-cache, no-store, must-revalidate"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html",
    ".png": "image/png",
    ".svg": "image/svg+xml",
    ".ico": "image/x-icon"
  },
  "roles": {
    "inventoryuser": {
      "provider": "aad"
    }
  },
  "platform": {
    "apiRuntime": "node:20"
  }
}

