{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/api/*"]
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/loggedout",
      "serve": "/loggedout.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/401.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/403.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/404.html",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/inventory/*",
      "allowedRoles": ["inventoryUser"]
    },
    {
      "route": "/inventory/*",
      "serve": "/index.html",
      "allowedRoles": ["inventoryUser"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["inventoryUser"]
    },
    {
      "route": "/",
      "serve": "/index.html",
      "allowedRoles": ["inventoryUser"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "allowedRoles": ["inventoryUser"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    },
    "403": {
      "statusCode": 403,
      "rewrite": "/403.html"
    },
    "404": {
      "statusCode": 404,
      "rewrite": "/404.html"
    }
  },
  "globalHeaders": {
    "cache-control": "no-cache, no-store, must-revalidate",
    "pragma": "no-cache",
    "expires": "0"
  },
  "mimeTypes": {
    ".json": "application/json",
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html"
  },
  "platform": {
    "apiRuntime": "node:20"
  }
}
